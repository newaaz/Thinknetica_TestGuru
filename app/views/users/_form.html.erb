<%= form_with model: @user do |f| %>
  <%= render 'shared/errors', resource: @user %>

  <div class="form-group mb-2 col-6">
    <%= f.label :email, class: "form-label" %>        
    <%= f.email_field :email, class: 'form-control form-control-sm', required: true %>
  </div>

  <div class="form-group mb-2 col-6">
    <%= f.label :name, class: "form-label" %>        
    <%= f.text_field :name, class: 'form-control form-control-sm', required: true %>
  </div>

  <div class="form-group mb-2 col-6">
    <%= f.label :password, class: "form-label" %>        
    <%= f.password_field :password, class: 'form-control form-control-sm', required: true %>
  </div>

  <div class="form-group mb-2 col-6">
    <%= f.label :password_confirmation, class: "form-label" %>        
    <%= f.password_field :password_confirmation, class: 'form-control form-control-sm', required: true %>
  </div>

  <div class="text-center col-6 mt-3">
    <%= f.submit class:"btn btn-primary"%>
    <%= link_to "Back", :back, class: "btn btn-secondary" %>
  </div>
<% end %>
