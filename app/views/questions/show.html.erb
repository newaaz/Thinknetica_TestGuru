<h1>Question show</h1>

<p>
  <strong>Body:</strong>
  <%= @question.body %>
</p>

<p>
  <strong>Test:</strong>
  <%= @question.test.title %>
</p>

<p>
  <%= link_to "to test", test_path(@question.test), class: "btn btn-success btn-sm" %>
  <%= link_to "edit", edit_question_path(@question), class: "btn btn-success btn-sm" %>
  <%= link_to "Destroy", @question,
                 method: :delete,
                 data: { confirm: "Are you sure?" },
                 class: "btn btn-outline-danger btn-sm" %>
</p>

