<h1>Passing the <%= @test_passage.test.title %> Test</h1>

<p id="notice"><%= notice %></p>

<p>Question <%= @test_passage.number_current_question %> / <%= @test_passage.test.questions.count %></p>

<div class="my-3">
  <b><%= @test_passage.current_question.body %></b>
</div>

<%= form_with url: test_passage_path(@test_passage), method: :put do |f| %>
  <%= f.collection_check_boxes :answer_ids, @test_passage.current_question.answers, :id, :body, include_hidden: false do |b| %>
    <div class="form-check mb-2 col-6">
      <%= b.check_box class: "form-check-input" %>
      <%= b.label class: "form-check-label" %>
    </div>
  <% end %>

  <%= f.submit "Next",class:"btn btn-primary btn-sm mt-3"%>
<% end %>
