<h1>Question show</h1>

<p>
  <strong>Test:</strong>
  <%= @question.test.title %>
</p>

<p>
  <strong>Body:</strong>
  <%= @question.body %>
</p>

<h2>Answers:</h2>

<%= link_to 'New answer', new_admin_question_answer_path(@question), class: 'btn btn-outline-primary btn-sm mb-3' %>

<ol>
  <%= render @question.answers %>
</ol>

<p>
  <%= link_to "to test", admin_test_path(@question.test), class: "btn btn-success btn-sm" %>
  <%= link_to "edit", edit_admin_question_path(@question), class: "btn btn-success btn-sm" %>
  <%= link_to "Destroy", admin_question_path(@question),
                 method: :delete,
                 data: { confirm: "Are you sure?" },
                 class: "btn btn-outline-danger btn-sm" %>
</p>




