<h1><%= t('.show_badge') %></h1>

<div class="bg-white border rounded p-4 my-4">
  <p>
    <strong><%= t('admin.badges.index.title') %></strong>
    <%= @badge.title %>
  </p>

  <p>
    <b><%= t('admin.badges.index.image') %></b><br>
    <%= image_tag "badges/#{@badge.image}.png" %>
  </p>

  <p>
    <b><%= t('admin.badges.index.rule_name') %></b>
    <%= @badge.rule_name %>
  </p>

  <p>
    <b><%= t('admin.badges.index.rule_value') %></b>
    <%= @badge.rule_value %>
  </p>
</div>

<p>
  <%= link_to t('actions.back'), :back, class: "btn btn-secondary btn-sm" %>
  <%= link_to t('actions.edit'), edit_admin_badge_path(@badge), class: "btn btn-success btn-sm" %>
  <%= link_to t('actions.destroy'), admin_badge_path(@badge),
                 method: :delete,
                 data: { confirm: t('actions.confirm') },
                 class: "btn btn-outline-danger btn-sm" %>
</p>
