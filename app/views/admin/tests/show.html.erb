<div class="bg-white border rounded p-4 my-4">

<p>
  <strong><%= t('.title') %></strong>
  <%= @test.title %>
</p>

<p>
  <strong><%= t('.category') %></strong>
  <%= @test.category.title %>
</p>

<p>
  <strong><%= t('.level') %></strong>
  <%= @test.level %>
</p>

<p><strong><%= t('.questions') %></strong></p>

<table class="table table-striped mt-3">
  <tr>
    <th><%= t('.question_body') %></th>
    <th><%= t('.actions') %></th>
  </tr>

  <%= render @test.questions %>
  
</table>

</div>

<p>
  <%= link_to t('actions.add_question'), new_admin_test_question_path(@test), class: "btn btn-success btn-sm" %>
  <%= link_to t('actions.edit'), edit_admin_test_path(@test), class: "btn btn-success btn-sm" %>
  <%= link_to t('actions.all_tests'), tests_path, class: "btn btn-primary btn-sm" %>
</p>


