<h2><%= t('signup.login') %></h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-group mb-2 col-6">
    <%= f.label :email, class: "form-label" %>        
    <%= f.email_field :email, class: 'form-control form-control-sm', required: true %>
  </div>

  <div class="form-group mb-2 col-6">
    <%= f.label t('signup.password'), class: "form-label" %>        
    <%= f.password_field :password, class: 'form-control form-control-sm', required: true %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="form-check">
      <%= f.check_box :remember_me, class: "form-check-input" %>
      <%= f.label t('signup.remember_me'), class: "form-check-label" %>
    </div>
  <% end %>

  <div class="text-center col-6 mt-3">
    <%= f.submit t('links.login'), class:"btn btn-primary"%>
    <%= link_to t('links.back'), :back, class: "btn btn-secondary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
